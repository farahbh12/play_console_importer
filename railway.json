{
  "$schema": "https://railway.app/railway.schema.json",
  "services": [
    {
      "name": "backend",
      "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "BACKEND/Dockerfile",
        "dockerContext": "BACKEND"
      }
    },
    {
      "name": "frontend",
      "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "frontend/Dockerfile",
        "dockerContext": "frontend"
      }
    }
  ]
}
